+			ret = list_variables      (agent_fd, "",      0,               (list==2));
+		}
+	} else if (delete) {
+		if (argc >= 1) {
+			ret = ssh_delete_variable (agent_fd, argv[0], strlen(argv[0]), (delete==2));
+		} else {
+			ret = ssh_delete_variable (agent_fd, "",      0,               (delete==2));
+		}
+	}
+	
+done:
+	ssh_close_authentication_socket(agent_fd);
+	return (ret >= 0 ? ret : 10);
