+	if (ssh_request_reply(sock, &msg, &msg) != 0) {
+		buffer_free(&msg);
+		return 0;
+	}
+	type = buffer_get_char(&msg);
+	buffer_free(&msg);
+  if (var && type == SSH_AGENT_NO_VARIABLE) return 2;
+	return decode_reply(type);
+}
